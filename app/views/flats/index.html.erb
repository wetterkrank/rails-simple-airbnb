<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal">Simple Airbnb</h5>
    <a class="btn btn-outline-primary" href="#">Add a flat</a>
</div>

<div class="container mt-5">
    <h1>All our flats (<%= @flats.count %>)</h1>
    
    <div class="d-flex justify-content-between">
        <% @flats.each do |flat| %>
            <div class="flat card">
                <h4><%= flat.name %></h3>
                <p><%= flat.address %></p>
                <p>
                    <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>
                    <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
                </p>
                <p><%= link_to "More info", flat_path(flat) %></p>
            </div>
        <% end %>
    </div>

    <%= button_to "Create a flat", new_flat_path, method: :get %>
</div>