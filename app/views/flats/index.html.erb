<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h4 class="my-0 mr-md-auto font-weight-normal">Simple Airbnb</h5>
    <%= link_to "Add a flat", new_flat_path, method: :get, class: "btn btn-primary" %>
</div>

<div class="container mt-4">
    <h2>All our flats (<%= @flats.count %>)</h1>
    
    <div class="d-flex flex-wrap">
        <% @flats.each do |flat| %>
            <div class="card p-0 col-4 col-lg-3 mr-4 my-3 shadow-sm">
                <div class="card-header">
                    <h5><%= flat.name %></h3>
                    <p><%= flat.address %></p>
                    <div class="align-text-bottom">
                        <i class="lni lni-users"></i> <%= flat.number_of_guests %>
                        <i class="ml-2 lni lni-euro"></i> <%= flat.price_per_night %>
                    </div>
                </div>
                <div class="card-body">
                    <%= link_to "More info", flat_path(flat) %>
                </div>
            </div>
        <% end %>
    </div>

</div>